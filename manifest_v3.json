{
    "name": "Фильтр Авито",
    "short_name": "Фильтр Авито",
    "description" : "Визуально сокращает просмотренные объявления, и объявления от продавцов из чёрного списка, делая их более компактными",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "main.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": [ "js/jquery/jquery-3.1.1.min.js", "js/background.js"]
    },
    "content_scripts": [ {
        "js": [ "js/jquery/jquery-3.1.1.min.js", "js/content_avito.js" ],
        "matches": [ "https://*.avito.ru/*" ],
        "run_at": "document_start"
    }],
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.avito.ru/*"
    ]
}